# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mirrormarkets?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Dynamic.xyz
DYNAMIC_ENVIRONMENT_ID="your-dynamic-environment-id"
DYNAMIC_PUBLIC_KEY="-----BEGIN RSA PUBLIC KEY-----\nyour-key-here\n-----END RSA PUBLIC KEY-----"

# Dynamic Server Wallets (Phase 2A)
DYNAMIC_API_KEY="your-dynamic-api-key"
DYNAMIC_SERVER_WALLET_ENV="sandbox"  # "sandbox" or "production"
USE_SERVER_WALLETS="true"            # "true" to use Dynamic Server Wallets for new users

# Trading Key Encryption (used by Phase 2B session keys + Phase 1 legacy migration)
TRADING_KEY_ENCRYPTION_KEY="64-hex-chars-here-generate-with-openssl-rand-hex-32"

# Polymarket
POLYMARKET_CLOB_API_URL="https://clob.polymarket.com"
POLYMARKET_GAMMA_API_URL="https://gamma-api.polymarket.com"
POLYMARKET_DATA_API_URL="https://data-api.polymarket.com"
POLYMARKET_RELAYER_URL="https://relayer-v2.polymarket.com"

# Polymarket Proxy (set these to route through EU proxy in production)
# POLYMARKET_CLOB_API_URL="https://<poly-proxy>/clob"
# POLYMARKET_RELAYER_URL="https://<poly-proxy>/relayer"

# Server
API_PORT=3001
API_HOST="0.0.0.0"
WEB_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Workers
COPY_POLL_INTERVAL_MS=15000
HEALTH_CHECK_INTERVAL_MS=60000
AUTO_CLAIM_INTERVAL_MS=3600000

# Phase 2B: Module Execution Worker
POLYGON_RPC_URL="https://polygon-bor-rpc.publicnode.com"

# Phase 2B: Deployed Contract Addresses (set after deployment)
# AUTOMATION_MODULE_ADDRESS="0x..."

# Node
NODE_ENV="development"
