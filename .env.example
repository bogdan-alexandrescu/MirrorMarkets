# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/mirrormarkets?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# Dynamic.xyz
DYNAMIC_ENVIRONMENT_ID="your-dynamic-environment-id"
DYNAMIC_PUBLIC_KEY="-----BEGIN RSA PUBLIC KEY-----\nyour-key-here\n-----END RSA PUBLIC KEY-----"

# Trading Key Encryption (AES-256-GCM)
TRADING_KEY_ENCRYPTION_KEY="64-hex-chars-here"

# Polymarket
POLYMARKET_CLOB_API_URL="https://clob.polymarket.com"
POLYMARKET_GAMMA_API_URL="https://gamma-api.polymarket.com"
POLYMARKET_DATA_API_URL="https://data-api.polymarket.com"

# Server
API_PORT=3001
API_HOST="0.0.0.0"
WEB_URL="http://localhost:3000"
API_URL="http://localhost:3001"

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Workers
COPY_POLL_INTERVAL_MS=15000
HEALTH_CHECK_INTERVAL_MS=60000
AUTO_CLAIM_INTERVAL_MS=3600000

# Node
NODE_ENV="development"
