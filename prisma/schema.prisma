generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Enums ──────────────────────────────────────────

enum WalletType {
  DYNAMIC_EOA
  TRADING_EOA  // @deprecated Phase 1 only – removed after Phase 2A migration
  SERVER_WALLET // Phase 2A: Dynamic Server Wallet (MPC-backed, replaces TRADING_EOA)
  POLY_PROXY
}

enum ServerWalletStatus {
  CREATING
  READY
  FAILED
}

enum CopyProfileStatus {
  DISABLED
  ENABLED
  PAUSED
}

enum FollowStatus {
  ACTIVE
  PAUSED
  REMOVED
}

enum CopyAttemptStatus {
  PENDING
  SUBMITTED
  FILLED
  PARTIALLY_FILLED
  FAILED
  SKIPPED
}

enum OrderStatus {
  OPEN
  FILLED
  PARTIALLY_FILLED
  CANCELLED
  EXPIRED
}

enum OrderSide {
  BUY
  SELL
}

enum RelayerTxStatus {
  PENDING
  SUBMITTED
  CONFIRMED
  FAILED
}

enum RelayerTxType {
  APPROVE
  DEPOSIT
  WITHDRAW
  REDEEM
  MODULE_ENABLE   // Phase 2B
  MODULE_DISABLE  // Phase 2B
  MODULE_EXEC     // Phase 2B: session key action through module
}

enum WithdrawalStatus {
  PENDING
  SUBMITTED
  CONFIRMED
  FAILED
}

// ─── Phase 2A signing enums ─────────────────────────

enum SigningRequestStatus {
  CREATED
  SENT
  SUCCEEDED
  FAILED
  RETRIED
}

enum SigningRequestType {
  TYPED_DATA
  MESSAGE
  TX
}

enum SigningPurpose {
  CLOB_ORDER
  CLOB_CANCEL
  CLOB_API_KEY
  WITHDRAW
  CTF_REDEEM
  CTF_APPROVE
  SAFE_MODULE_OP
  PROVISIONING_PROOF
  BINDING_PROOF
  OTHER
}

enum SigningProvider {
  DYNAMIC_SERVER_WALLET
  CROSSMINT
  MOCK
}

// ─── Phase 2B enums ─────────────────────────────────

enum SigningMode {
  DYNAMIC_SERVER_WALLET   // Phase 2A: server wallet for CLOB + module for onchain
  EIP1271_SAFE            // If Polymarket CLOB supports Safe signatures
  USER_EMBEDDED_WALLET    // Fallback: user signs interactively
}

enum SessionKeyStatus {
  ACTIVE
  ROTATED
  REVOKED
  EXPIRED
}

enum ModuleTxStatus {
  PENDING
  SUBMITTED
  CONFIRMED
  FAILED
  BLOCKED       // Constraint violation — module rejected onchain
}

enum AuditAction {
  USER_CREATED
  WALLET_PROVISIONED
  PROXY_DEPLOYED
  COPY_ENABLED
  COPY_DISABLED
  COPY_ATTEMPT
  ORDER_PLACED
  ORDER_CANCELLED
  FOLLOW_CREATED
  FOLLOW_REMOVED
  DEPOSIT_INITIATED
  WITHDRAWAL_INITIATED
  WITHDRAWAL_COMPLETED
  CLAIM_REDEEMED
  AUTO_CLAIM_ENABLED
  AUTO_CLAIM_DISABLED
  AUTO_CLAIM_RUN
  SETTINGS_UPDATED
  ERROR
  // Phase 2A
  SERVER_WALLET_CREATED
  SERVER_WALLET_FAILED
  SIGNING_REQUESTED
  SIGNING_COMPLETED
  SIGNING_FAILED
  SIGN_REQUEST_SENT
  SIGN_REQUEST_SUCCEEDED
  SIGN_REQUEST_FAILED
  SIGN_RATE_LIMITED
  SIGN_RETRY_SCHEDULED
  MIGRATION_STARTED
  MIGRATION_COMPLETED
  MIGRATION_FAILED
  PRIVATE_KEY_DESTROYED
  OWNERSHIP_TRANSFERRED
  BINDING_PROOF_CREATED
  BINDING_PROOF_VERIFIED
  // Phase 2B
  MODULE_ENABLE_PREPARED
  MODULE_ENABLE_CONFIRMED
  MODULE_DISABLED
  SESSION_KEY_REGISTERED
  SESSION_KEY_ROTATED
  SESSION_KEY_REVOKED
  CONSTRAINTS_UPDATED
  MODULE_TX_SUBMITTED
  MODULE_TX_CONFIRMED
  MODULE_TX_BLOCKED
  WITHDRAWAL_ALLOWLIST_ADDED
  WITHDRAWAL_ALLOWLIST_REMOVED
}

// ─── Models ─────────────────────────────────────────

model User {
  id        String   @id @default(cuid())
  dynamicId String   @unique @map("dynamic_id")
  email     String   @unique
  name      String?
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  authSessions          AuthSession[]
  wallets               Wallet[]
  serverWallet          ServerWallet?
  polymarketCredentials PolymarketCredentials?
  copyProfile           CopyProfile?
  follows               Follow[]
  copyAttempts          CopyAttempt[]
  orders                Order[]
  positionSnapshots     PositionSnapshot[]
  relayerTxs            RelayerTx[]
  withdrawals           Withdrawal[]
  autoClaimSettings     AutoClaimSettings?
  autoClaimRuns         AutoClaimRun[]
  auditLogs             AuditLog[]
  // Phase 2A
  signingRequests       SigningRequest[]
  bindingProof          BindingProof?
  // Phase 2B
  safeAutomation        SafeAutomation?
  sessionKeys           SessionKey[]
  withdrawalAllowlist   WithdrawalAllowlist[]
  moduleTxs             ModuleTx[]

  @@map("users")
}

model AuthSession {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
  @@map("auth_sessions")
}

model Wallet {
  id         String     @id @default(cuid())
  userId     String     @map("user_id")
  type       WalletType
  address    String
  encPrivKey String?    @map("enc_priv_key")
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
  @@index([address])
  @@map("wallets")
}

model ServerWallet {
  id                    String             @id @default(cuid())
  userId                String             @unique @map("user_id")
  dynamicServerWalletId String             @unique @map("dynamic_server_wallet_id")
  address               String
  status                ServerWalletStatus @default(CREATING)
  lastError             String?            @map("last_error")
  createdAt             DateTime           @default(now()) @map("created_at")
  updatedAt             DateTime           @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([address])
  @@map("server_wallets")
}

// ─── Phase 2A: Signing Request Audit Trail ──────────

model SigningRequest {
  id              String               @id @default(cuid())
  userId          String               @map("user_id")
  requestType     SigningRequestType    @map("request_type")
  purpose         SigningPurpose
  idempotencyKey  String               @unique @map("idempotency_key")
  payloadHash     String               @map("payload_hash")
  payloadJson     Json?                @map("payload_json") // redacted if sensitive
  status          SigningRequestStatus  @default(CREATED)
  attemptCount    Int                  @default(0) @map("attempt_count")
  lastError       String?              @map("last_error")
  provider        SigningProvider
  signature       String?
  correlationId   String               @map("correlation_id")
  createdAt       DateTime             @default(now()) @map("created_at")
  updatedAt       DateTime             @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([status])
  @@index([correlationId])
  @@map("signing_requests")
}

// ─── Phase 2A: Binding Proof ────────────────────────

model BindingProof {
  id                String   @id @default(cuid())
  userId            String   @unique @map("user_id")
  embeddedWalletAddr String  @map("embedded_wallet_addr")
  proofHash         String   @map("proof_hash") // sha256 of signed message
  verifiedAt        DateTime @map("verified_at")
  createdAt         DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("binding_proofs")
}

// ─── Existing models (unchanged) ────────────────────

model PolymarketCredentials {
  id              String   @id @default(cuid())
  userId          String   @unique @map("user_id")
  apiKey          String   @map("api_key")
  apiSecret       String   @map("api_secret")
  passphrase      String
  proxyAddress    String?  @map("proxy_address")
  isProxyDeployed Boolean  @default(false) @map("is_proxy_deployed")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("polymarket_credentials")
}

model CopyProfile {
  id                String            @id @default(cuid())
  userId            String            @unique @map("user_id")
  status            CopyProfileStatus @default(DISABLED)
  maxPositionSizeUsd Float            @default(50) @map("max_position_size_usd")
  maxOpenPositions  Int               @default(10) @map("max_open_positions")
  copyPercentage    Float             @default(100) @map("copy_percentage")
  minOdds           Float             @default(0.05) @map("min_odds")
  maxOdds           Float             @default(0.95) @map("max_odds")
  enabledMarketIds  String[]          @default([]) @map("enabled_market_ids")
  blockedMarketIds  String[]          @default([]) @map("blocked_market_ids")
  createdAt         DateTime          @default(now()) @map("created_at")
  updatedAt         DateTime          @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("copy_profiles")
}

model Leader {
  id              String   @id @default(cuid())
  address         String   @unique
  displayName     String?  @map("display_name")
  profileImageUrl String?  @map("profile_image_url")
  pnl             Float    @default(0)
  volume          Float    @default(0)
  rank            Int?
  lastSyncedAt    DateTime? @map("last_synced_at")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  follows      Follow[]
  leaderEvents LeaderEvent[]

  @@index([rank])
  @@map("leaders")
}

model Follow {
  id        String       @id @default(cuid())
  userId    String       @map("user_id")
  leaderId  String       @map("leader_id")
  status    FollowStatus @default(ACTIVE)
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  leader Leader @relation(fields: [leaderId], references: [id], onDelete: Cascade)

  @@unique([userId, leaderId])
  @@map("follows")
}

model LeaderEvent {
  id             String   @id @default(cuid())
  leaderId       String   @map("leader_id")
  conditionId    String   @map("condition_id")
  tokenId        String   @map("token_id")
  marketSlug     String?  @map("market_slug")
  side           OrderSide
  size           Float
  price          Float
  transactionHash String? @map("transaction_hash")
  detectedAt     DateTime @default(now()) @map("detected_at")
  createdAt      DateTime @default(now()) @map("created_at")

  leader       Leader        @relation(fields: [leaderId], references: [id], onDelete: Cascade)
  copyAttempts CopyAttempt[]

  @@index([leaderId, detectedAt])
  @@index([conditionId])
  @@map("leader_events")
}

model CopyAttempt {
  id            String            @id @default(cuid())
  userId        String            @map("user_id")
  leaderEventId String            @map("leader_event_id")
  status        CopyAttemptStatus @default(PENDING)
  orderId       String?           @map("order_id")
  skipReason    String?           @map("skip_reason")
  errorMessage  String?           @map("error_message")
  createdAt     DateTime          @default(now()) @map("created_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  leaderEvent LeaderEvent @relation(fields: [leaderEventId], references: [id], onDelete: Cascade)
  order       Order?      @relation(fields: [orderId], references: [id])

  @@index([userId, createdAt])
  @@index([leaderEventId])
  @@map("copy_attempts")
}

model Order {
  id           String      @id @default(cuid())
  userId       String      @map("user_id")
  polyOrderId  String?     @unique @map("poly_order_id")
  conditionId  String      @map("condition_id")
  tokenId      String      @map("token_id")
  marketSlug   String?     @map("market_slug")
  side         OrderSide
  size         Float
  price        Float
  filledSize   Float       @default(0) @map("filled_size")
  status       OrderStatus @default(OPEN)
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  fills        Fill[]
  copyAttempts CopyAttempt[]

  @@index([userId, status])
  @@index([conditionId])
  @@map("orders")
}

model Fill {
  id          String   @id @default(cuid())
  orderId     String   @map("order_id")
  polyFillId  String?  @unique @map("poly_fill_id")
  size        Float
  price       Float
  side        OrderSide
  fee         Float    @default(0)
  filledAt    DateTime @map("filled_at")
  createdAt   DateTime @default(now()) @map("created_at")

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@map("fills")
}

model PositionSnapshot {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  conditionId String   @map("condition_id")
  tokenId     String   @map("token_id")
  marketSlug  String?  @map("market_slug")
  size        Float
  avgPrice    Float    @map("avg_price")
  currentPrice Float   @map("current_price")
  pnl         Float    @default(0)
  snapshotAt  DateTime @default(now()) @map("snapshot_at")
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, conditionId])
  @@map("position_snapshots")
}

model RelayerTx {
  id              String          @id @default(cuid())
  userId          String          @map("user_id")
  type            RelayerTxType
  status          RelayerTxStatus @default(PENDING)
  transactionHash String?         @map("transaction_hash")
  amount          Float?
  errorMessage    String?         @map("error_message")
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
  @@map("relayer_txs")
}

model Withdrawal {
  id              String           @id @default(cuid())
  userId          String           @map("user_id")
  amount          Float
  destinationAddr String           @map("destination_addr")
  status          WithdrawalStatus @default(PENDING)
  transactionHash String?          @map("transaction_hash")
  errorMessage    String?          @map("error_message")
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("withdrawals")
}

model AutoClaimSettings {
  id              String  @id @default(cuid())
  userId          String  @unique @map("user_id")
  enabled         Boolean @default(false)
  minClaimableUsd Float   @default(1) @map("min_claimable_usd")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("auto_claim_settings")
}

model AutoClaimRun {
  id           String   @id @default(cuid())
  userId       String   @map("user_id")
  claimedCount Int      @default(0) @map("claimed_count")
  claimedUsd   Float    @default(0) @map("claimed_usd")
  errorMessage String?  @map("error_message")
  ranAt        DateTime @default(now()) @map("ran_at")
  createdAt    DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, ranAt])
  @@map("auto_claim_runs")
}

model AuditLog {
  id        String      @id @default(cuid())
  userId    String?     @map("user_id")
  action    AuditAction
  details   Json?
  ipAddress String?     @map("ip_address")
  createdAt DateTime    @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([action])
  @@map("audit_logs")
}

model IdempotencyKey {
  id           String   @id @default(cuid())
  key          String   @unique
  userId       String   @map("user_id")
  endpoint     String
  statusCode   Int      @map("status_code")
  responseBody Json     @map("response_body")
  createdAt    DateTime @default(now()) @map("created_at")
  expiresAt    DateTime @map("expires_at")

  @@index([key])
  @@index([expiresAt])
  @@map("idempotency_keys")
}

// ─── Phase 2B: Safe Automation ──────────────────────

model SafeAutomation {
  id                     String      @id @default(cuid())
  userId                 String      @unique @map("user_id")
  safeAddress            String      @map("safe_address")
  moduleAddress          String      @map("module_address")
  registryAddress        String?     @map("registry_address")
  enabled                Boolean     @default(false)
  signingMode            SigningMode @default(DYNAMIC_SERVER_WALLET) @map("signing_mode")
  activeSessionKeyId     String?     @map("active_session_key_id")
  sessionKeyPublicAddress String?    @map("session_key_public_address")
  constraints            Json        @default("{}")
  enableTxHash           String?     @map("enable_tx_hash")
  enabledAt              DateTime?   @map("enabled_at")
  disabledAt             DateTime?   @map("disabled_at")
  createdAt              DateTime    @default(now()) @map("created_at")
  updatedAt              DateTime    @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([safeAddress])
  @@map("safe_automations")
}

model SessionKey {
  id                     String           @id @default(cuid())
  userId                 String           @map("user_id")
  publicAddress          String           @map("public_address")
  encryptedPrivateKey    String           @map("encrypted_private_key")
  status                 SessionKeyStatus @default(ACTIVE)
  expiresAt              DateTime         @map("expires_at")
  createdAt              DateTime         @default(now()) @map("created_at")
  updatedAt              DateTime         @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([publicAddress])
  @@map("session_keys")
}

model WithdrawalAllowlist {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  address   String
  label     String?
  addedTxHash String? @map("added_tx_hash")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, address])
  @@map("withdrawal_allowlists")
}

model ModuleTx {
  id              String        @id @default(cuid())
  userId          String        @map("user_id")
  sessionKeyId    String?       @map("session_key_id")
  action          String        // e.g. "ctf_redeem", "erc20_approve", "withdrawal"
  targetContract  String        @map("target_contract")
  functionSelector String       @map("function_selector")
  callData        String        @map("call_data")
  notionalUsd     Float?        @map("notional_usd")
  status          ModuleTxStatus @default(PENDING)
  transactionHash String?       @map("transaction_hash")
  errorMessage    String?       @map("error_message")
  blockReason     String?       @map("block_reason")
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([status])
  @@map("module_txs")
}
